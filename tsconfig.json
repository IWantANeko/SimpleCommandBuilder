{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "outDir": "./scripts",
        "rootDir": "./source",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "allowImportingTsExtensions": false,
    },
    "include": [
        "source/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/.*",
        "**/.*/"
    ]
}