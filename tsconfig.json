{
    "compilerOptions": {
        "target": "ES6",
        "module": "none",
        "lib": ["ES6"],
        "moduleResolution": "node",
        "outDir": "./scripts",
        "rootDir": "./source",
        "esModuleInterop": true,
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "allowImportingTsExtensions": false,
        "removeComments": true,
    },
    "include": [
        "source/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/.*",
        "**/.*/",
    ]
}